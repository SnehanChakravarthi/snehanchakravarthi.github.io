---
import { Image } from 'astro:assets';

import rangerImage from '@/images/Ranger/1.jpg';
import motsatsImage from '@/images/Motsats/1.jpg';
import rebirthcradleImage from '@/images/RebirthCradle/1.jpg';
import sightlightImage from '@/images/SightLight/1.jpg';

const designWorks = {
	rebirthcradle: {
		title: 'Rebirth Cradle',
		description:
			'Human micro habitat for the future of living and working in long distance space travel.',
		image: rebirthcradleImage,
		project: 'Design in collaboration with NASA Johnson Space Center 2019-2020'
	},
	ranger: {
		title: 'Ranger',
		description: 'Electric surfboard with foldable seat for minimal jet-ski experience.',
		image: rangerImage,
		project: 'Master Thesis Project'
	},
	motsats: {
		title: 'Motsats',
		description: 'Transformable & Multifunctional furniture for work and rest.',
		image: motsatsImage,
		project: 'Design for IKEA Milan Design Week 2019'
	},
	sightlight: {
		title: 'Sight Light',
		description: 'Multi-functional light with form x function.',
		image: sightlightImage,
		project: 'Hobby Project'
	}
};
---

<div
	class="mt-10 rounded-2xl border-lightCardBorder bg-lightCard shadow-xl shadow-lightShadow dark:border-darkCardBorder dark:bg-darkCard dark:shadow-darkShadow lg:rotate-1"
>
	{
		Object.entries(designWorks).map(([key, work]) => (
			<a
				class="project-card group flex cursor-pointer items-center justify-between gap-2 overflow-hidden border border-b-0 transition-all  duration-150  ease-in-out first:rounded-t-2xl last:rounded-b-2xl last:border odd:flex-col-reverse even:flex-col-reverse hover:-rotate-1 hover:scale-105 hover:rounded-2xl hover:border hover:shadow-2xl hover:shadow-lightShadow dark:hover:shadow-darkShadow md:h-60 md:gap-4 md:odd:flex-row-reverse md:even:flex-row"
				href={`/design/${key}`}
			>
				<div class="space-y-3 px-4 pb-2 font-redhat lg:px-8">
					<p class="group-hover:text-decoration-card">{work.description}</p>
					<p class="text-sm">{work.project}</p>
				</div>
				<Image src={work.image} alt={work.description} height={260} class="w-full  md:w-auto" />
			</a>
		))
	}
</div>
